<resources>

    <!--input dialog-->
    <style name="LCU.Input.Dialog" parent="LCU.AlertDialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
     </style>

    <!--AlertDialog-->
    <style name="LCU.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/lcu_colorPrimary</item>
        <item name="colorPrimaryDark">@color/lcu_colorPrimaryDark</item>
        <item name="colorAccent">@color/lcu_colorAccent</item>
    </style>

    <!--ActionBar base-->
    <style name="LCU.AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/lcu_colorPrimary</item>
        <item name="colorPrimaryDark">@color/lcu_colorPrimaryDark</item>
        <item name="colorAccent">@color/lcu_colorAccent</item>
        <item name="background">@android:color/background_light</item>
    </style>

    <!--ActionBar-->
    <style name="LCU.AppTheme.ActionBar" parent="LCU.AppBaseTheme"/>

    <!--Toolbar-->
    <style name="LCU.AppTheme.ToolBar" parent="LCU.AppTheme.NoActionBar"/>

    <!--NoActionBar-->
    <style name="LCU.AppTheme.NoActionBar" parent="LCU.AppBaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Fullscreen-->
    <style name="LCU.AppTheme.Fullscreen" parent="LCU.AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
